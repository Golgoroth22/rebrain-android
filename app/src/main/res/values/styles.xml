<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashLauncherTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">#1A000000</item>
    </style>

    <style name="AppTheme.IntroTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorIntroBackground</item>
        <item name="colorPrimaryDark">#1A000000</item>
    </style>
</resources>
