<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".screen.main.MainActivity">

    <include layout="@layout/layout_toolbar" />

    <FrameLayout
        android:id="@+id/main_activity_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/main_activity_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorLine6" />

    <com.falin.valentin.foodapp.screen.custom_view.CustomBottomBarView
        android:id="@+id/main_activity_custom_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />
</LinearLayout>